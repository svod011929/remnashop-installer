# .env.example - Пример конфигурационного файла

# ========== APPLICATION ==========
# Доменное имя вашего сервера
APP_DOMAIN=example.com

# Криптографический ключ приложения (автогенерируется)
APP_CRYPT_KEY=your_crypt_key_here

# ========== BOT CONFIGURATION ==========
# Токен Telegram бота (получить от @BotFather)
BOT_TOKEN=your_bot_token_here

# Секретный токен для webhook (автогенерируется)
BOT_SECRET_TOKEN=your_secret_token_here

# Telegram ID разработчика (получить от @userinfobot)
BOT_DEV_ID=your_telegram_id_here

# Username поддержки в Telegram (без @)
BOT_SUPPORT_USERNAME=support

# ========== DATABASE CONFIGURATION ==========
# Пароль базы данных (автогенерируется)
DATABASE_PASSWORD=your_db_password_here

# Имя пользователя БД
DATABASE_USER=remnadb

# Имя базы данных
DATABASE_NAME=remnashop

# Хост БД (используется имя контейнера)
DATABASE_HOST=postgres

# Порт БД
DATABASE_PORT=5432

# ========== REDIS CONFIGURATION ==========
# Пароль Redis (автогенерируется)
REDIS_PASSWORD=your_redis_password_here

# Хост Redis
REDIS_HOST=redis

# Порт Redis
REDIS_PORT=6379

# ========== REMNAWAVE PANEL INTEGRATION ==========
# Домен или IP адрес вашей Remnawave панели
REMNAWAVE_HOST=panel.example.com

# API токен для подключения к панели
# Получить можно в панели управления Remnawave
REMNAWAVE_TOKEN=your_remnawave_api_token

# Webhook secret для интеграции с Remnawave
# Должен совпадать с WEBHOOK_SECRET в .env панели
REMNAWAVE_WEBHOOK_SECRET=your_webhook_secret_here

# ========== LOGGING & DEBUG ==========
# Уровень логирования (debug, info, warning, error)
LOG_LEVEL=info

# Включить debug режим (true/false)
DEBUG=false

# ========== TIMEZONE & LOCALE ==========
# Часовой пояс сервера
TZ=UTC

# Локаль для форматирования
LOCALE=en_US.UTF-8

# ========== PAYMENT GATEWAYS ==========
# Включить различные платежные системы
ENABLE_YOOKASSA=false
ENABLE_TELEGRAM_STARS=true
ENABLE_CRYPTOMUS=false

# YooKassa API ключи (если используется)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_API_KEY=your_api_key

# Cryptomus API ключи (если используется)
CRYPTOMUS_MERCHANT_ID=your_merchant_id
CRYPTOMUS_API_KEY=your_api_key

# ========== NOTIFICATIONS ==========
# Email для отправки уведомлений
ADMIN_EMAIL=admin@example.com

# SMTP конфигурация
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ========== SECURITY ==========
# Максимальная попытка входа перед блокировкой
MAX_LOGIN_ATTEMPTS=5

# Время блокировки IP после неудачных попыток (в минутах)
LOCKOUT_DURATION=15

# ========== FEATURES ==========
# Включить регистрацию новых пользователей
ENABLE_REGISTRATION=true

# Требовать подтверждение email при регистрации
REQUIRE_EMAIL_VERIFICATION=false

# Включить реферальную систему
ENABLE_REFERRAL=true

# Максимум уровней в реферальной системе
REFERRAL_LEVELS=2

# ========== PERFORMANCE ==========
# Количество рабочих процессов
WORKERS=4

# Максимум подключений к БД
DB_MAX_CONNECTIONS=20

# Кеш TTL (Time To Live) в секундах
CACHE_TTL=3600

# ========== BACKUP & MAINTENANCE ==========
# Включить автоматическое резервное копирование
AUTO_BACKUP=true

# Время для резервного копирования (в формате HH:MM)
BACKUP_TIME=03:00

# Количество дней для сохранения бэкапов
BACKUP_RETENTION_DAYS=30
